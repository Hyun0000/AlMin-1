	<insert id="insertComments" parameterType="map" >
		<choose>
			<when test="category == 'insertGood'">
					<foreach collection="list" item="item" separator=" " open="INSERT ALL" close="SELECT * FROM DUAL">
						INTO COMMENTS_GOOD_MAP VALUES
						(1, (SELECT GOOD_NO FROM COMMENTS_GOOD WHERE GOOD_NAME = #{item}))
					</foreach>
					
			</when>
		</choose>
	</insert>
